{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@steps/*": ["steps/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["features/**/*.ts", "steps/**/*.ts", "src/**/*.ts"]
}
